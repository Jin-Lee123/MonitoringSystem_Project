                        <GradientStop Color="White" Offset="1" />
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Rectangle x:Name="bar1" Width="34" Height="30" Canvas.Left="101" Canvas.Top="136"
