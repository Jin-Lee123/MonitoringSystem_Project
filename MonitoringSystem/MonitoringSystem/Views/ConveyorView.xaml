<UserControl x:Class="MonitoringSystem.Views.ConveyorView"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:vlc="clr-namespace:Vlc.DotNet.Wpf;assembly=Vlc.DotNet.Wpf"
      xmlns:local="clr-namespace:MonitoringSystem.JIN"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <!-- 동그라미 바인딩 -->
        <lvc:Gauge Uses360Mode="True" x:Name="myGauge" Margin="67,27,187,67" LabelFormatter="{Binding YFormatter}"
         LabelsVisibility="Collapsed"  StrokeThickness="2" Value="{Binding ProdQty}" From="0" To="{Binding TotalQty}" Grid.Column="1" Grid.RowSpan="2"/>
        <lvc:Gauge Uses360Mode="True" x:Name="myGauge_Copy" Margin="14,135.6,283,0" LabelFormatter="{Binding YFormatter2}"
            LabelsVisibility="Collapsed"  StrokeThickness="2" Value="{Binding BadQty}" From="0" To="{Binding ProdQty}" Grid.Row="1" Grid.Column="1"/>


        <DataGrid x:Name="Line" Grid.Column="0" 
                      Style="{StaticResource MahApps.Styles.DataGrid.Azure}"
                      AutoGenerateColumns="False" IsReadOnly="True"
                      SelectedItem="{Binding SelectedEmployee}" Margin="0,30,79,53" Grid.RowSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Plantcode}" Header="공장" />
                <DataGridTextColumn Binding="{Binding GoalQty}"   Header="지시수량" />
                <DataGridTextColumn Binding="{Binding TotalQty}"  Header="생산수량" />
                <DataGridTextColumn Binding="{Binding ProdQty}"   Header="양품수량" />
                <DataGridTextColumn Binding="{Binding BadQty}"    Header="불량수량" />
                <DataGridTextColumn Binding="{Binding Woker}"     Header="작업자" />
               

            </DataGrid.Columns>
        </DataGrid>


        <Label Content="{Binding LblStatus}" Grid.Row="1" Grid.Column="0" Margin="23,21,241,82"/>
        <Label Content="{Binding LblStatus1}" Grid.Row="1" Grid.Column="0" Margin="10,112,265,10"/>


        <Grid Grid.Row="1" Height="50" Width="200" Margin="23,145.6,141,156.6" Background="Bisque" Grid.RowSpan="2" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" Text="로봇온도" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" FontWeight="Bold" />
            <TextBlock Grid.Row="0" Grid.Column="1" Text="컨베이어 온도" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" FontWeight="Bold" />
            <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding RobotTemp}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" FontWeight="Bold" />
            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ConveyTemp}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" FontWeight="Bold" />
        </Grid>


        <Label Content="LINE 모니터링" Grid.Row="0" Grid.Column="0"  Foreground="Black" FontSize="20" FontFamily="Arial Black"/>
        <Label Content="LINE CCTV" Grid.Row="1" Grid.Column="1"  Foreground="Black" FontSize="15" FontFamily="Arial Black"/>
        <local:UC_Conveyor2 HorizontalAlignment="Left" Height="164" Margin="12,53,0,-7" Grid.Row="2" VerticalAlignment="Top" Width="388" Grid.Column="1"/>
        <local:UC_Motor x:Name="Motor1" Grid.Column="1" HorizontalAlignment="Left" Height="60" Margin="21,91,0,0" Grid.Row="2" VerticalAlignment="Top" Width="96"/>
        <local:UC_Motor x:Name="Motor2" Grid.Column="1" HorizontalAlignment="Left" Height="60" Margin="117,91,0,0" Grid.Row="2" VerticalAlignment="Top" Width="96"/>
        <local:UC_Motor x:Name="Motor3" Grid.Column="1" HorizontalAlignment="Left" Height="60" Margin="207,91,0,0" Grid.Row="2" VerticalAlignment="Top" Width="96"/>
        <local:UC_Motor x:Name="Motor4" Grid.Column="1" HorizontalAlignment="Left" Height="60" Margin="294,91,0,0" Grid.Row="2" VerticalAlignment="Top" Width="96"/>
        <local:UC_Robotc_Arm2 x:Name="Arm" HorizontalAlignment="Left" Height="124" Margin="195,190,0,0" Grid.Row="1" VerticalAlignment="Top" Width="167" Grid.RowSpan="2"/>
        <local:UC_Robotic_Arm HorizontalAlignment="Left" Height="277" Width="300" Margin="109,112,0,0" Grid.Row="1" VerticalAlignment="Top"  Grid.RowSpan="2" Grid.ColumnSpan="2"/>


        <Button x:Name="ArmStop" Content="Stop" Height="50" Width="100" Grid.Column="0" Grid.Row="2" Style="{StaticResource MahApps.Styles.Button.Square.Accent}" Margin="35,124,265,36" Click="ArmStop_Click"  />
        <Button x:Name="ArmRun" Content="Run" Height="50" Width="100" Grid.Row="2" Style="{StaticResource MahApps.Styles.Button.Square.Accent}" Margin="35,58,265,101.6" Click="ArmRun_Click"  />
        <Button x:Name="ConveyRun"  Content="Run" Height="50" Width="100" Grid.Column="1" Grid.Row="2" Style="{StaticResource MahApps.Styles.Button.Square.Accent}" Margin="260,10,40,150" Click="ConveyRun_Click" />
        <Button x:Name="ConveyStop" Content=" Stop" Height="50" Width="100" Grid.Column="1" Grid.Row="2" Style="{StaticResource MahApps.Styles.Button.Square.Accent}" Margin="155,10,145,150" Click="ConveyStop_Click" />
        <Button x:Name="ConveyBack" Content="Back " Height="50" Width="100" Grid.Column="1" Grid.Row="2" Style="{StaticResource MahApps.Styles.Button.Square.Accent}" Margin="50,10,250,150" Click="ConveyBack_Click" />


        <vlc:VlcControl x:Name="image" Grid.Column="1" Margin="218,30.6,18,67" Grid.Row="1"/>
        <Button Grid.Row="1" x:Name="Play_Button" Content="Play" Click="Play_Button_Click" Height="30" Width="50" Margin="294,3,23,180" Background="Yellow" Grid.Column="1"/>


    </Grid>
</UserControl>
