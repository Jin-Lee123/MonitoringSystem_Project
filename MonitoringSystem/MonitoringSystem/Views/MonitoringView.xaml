<UserControl x:Class="MonitoringSystem.Views.MonitoringView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:local="clr-namespace:MonitoringSystem.JIN"
      xmlns:vlc="clr-namespace:Vlc.DotNet.Wpf;assembly=Vlc.DotNet.Wpf"
      mc:Ignorable="d" Background="White"
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- (1행.1열) 화면-->
        <Label Content="공장전체 상황판" Foreground="Black" FontSize="20" FontFamily="Arial Black"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width ="3*"/>
                <ColumnDefinition Width ="8*"/>

            </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Background="AliceBlue">
            <Label Content="공장 온도 :" />
            <Label Content="공장 습도 :"/>
            <Label Content="공장 미세먼지 :"/>
            <Label Content="가스 :"/>
            <Label Content="온도 :"/>
        </StackPanel >
            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center" Background="AliceBlue">
                <Label Content="" Height="25"  MinWidth="80"
                           Style="{StaticResource MahApps.Styles.Label}"/>
                <Label Content="" Height="25" MinWidth="80" Style="{StaticResource MahApps.Styles.Label}"/>
                <Label Content="" Height="25" MinWidth="80" Style="{StaticResource MahApps.Styles.Label}"/>
                <Label Content="" Height="25" MinWidth="80" Style="{StaticResource MahApps.Styles.Label}"/>
                <Label Content="" Height="25" MinWidth="80" Style="{StaticResource MahApps.Styles.Label}"/>
            </StackPanel>
        </Grid>
        <!-- (1행.2열) 화면-->
        <Label Content="LINE 공정" Grid.Row="0" Grid.Column="1"  Foreground="Black" FontSize="20" FontFamily="Arial Black"/>
        <Label Content="설비온도&#xD;&#xA;컨베이어 : {}도 &#xD;&#xA;로봇팔 : {}도" Grid.Row="0" Grid.Column="1" Margin="10,73,250,77" FontFamily="Arial Black" />

        <!-- (2행.1열) 화면-->
        <vlc:VlcControl x:Name="image" Grid.Row="1" Grid.Column="0" Margin="5">

        </vlc:VlcControl>
        <Button Grid.Column="0" Grid.Row="0" x:Name="Play_Button" Content="Play" Click="Play_Button_Click"></Button>


        <!-- (2행.2열) 화면-->
        <Label Content="PUMP 공정" Grid.Row="1" Grid.Column="1"  Foreground="Black" FontSize="20" FontFamily="Arial Black"/>

    </Grid>
</UserControl>
